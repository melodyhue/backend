container_name=melodyhue-backend

# FastAPI configuration
SECRET_KEY="Your_Secret_Key_Here"
ENABLE_CORS="true"
CORS_ALLOW_ORIGINS="https://example.com,http://localhost:4200,http://127.0.0.1:4200"
CORS_ALLOW_CREDENTIALS="true"

# Encryption key for sensitive data
ENCRYPTION_KEY="Your_Encryption_Key_Here"

# DB configuration
DB_HOST="your_db_host"
DB_DATABASE="your_db_name"
DB_USER="your_db_user"
DB_PASSWORD="your_db_password"
DB_PORT=3306

# SMTP configuration
SMTP_HOST="your_smtp_server"
SMTP_PORT=587
SMTP_USER="your_smtp_user"
SMTP_PASSWORD="your_smtp_password"
SMTP_STARTTLS="true"
SMTP_FROM="your@domain.com"
SMTP_FROM_NAME="YourAppName"
FRONTEND_URL="https://your-frontend-url.com"
EMAIL_DEBUG="false"

# Real-time (WebSocket) configuration
COOKIE_SECURE=true
COOKIE_SAMESITE=none
COOKIE_DOMAIN=.your-domain.com

# Spotify Configuration
SPOTIFY_REQUEST_INTERVAL=3.0
SPOTIFY_POLLING_INTERVAL=3.0